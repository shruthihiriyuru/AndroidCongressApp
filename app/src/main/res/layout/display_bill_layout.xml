<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1">
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/billAppBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/billtoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkgray"
            android:text="Bill Info"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Bill Info"
            />
    </android.support.design.widget.AppBarLayout>

    <CheckBox
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:button="@drawable/favorite_state"
        android:layout_alignParentRight="true"
        android:id="@+id/billstarIcon"
        android:layout_below = "@+id/billAppBar"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/billstarIcon"
        android:stretchColumns="*"
        android:layout_margin="20dp"
        >

        <TableRow
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bill ID:"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billID"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Title:"
                android:textStyle="bold"
                android:layout_weight="0.4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/billTitle"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Bill Type:"
                android:textStyle="bold"
                android:layout_weight="0.4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/billType"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sponsor:"
                android:textStyle="bold"
                android:layout_weight="0.4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/billSponsor"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Chamber:"
                android:textStyle="bold"
                android:layout_weight="1"
                />

            <ImageView android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/billImg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginLeft="150dp"
                android:layout_weight="0"
                android:layout_toLeftOf="@+id/billChamber"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billChamber"
                android:textColor="@color/black"

                android:layout_weight="1"
                android:gravity="right"

                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Status:"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billStatus"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Introduced On:"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/billIntroduced"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Congress URL:"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/billCongressURL"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Version Status:"
                android:textStyle="bold"
                android:layout_weight="0.4"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/billVersionStatus"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right"
                />
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Bill URL:"
                    android:textStyle="bold"
                    android:layout_weight="0.4"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/billURL"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    />
        </TableRow>


    </TableLayout>
</RelativeLayout>
</ScrollView>