        </activity>
        <activity android:name=".DisplayCommitteeActivity"></activity>
        <activity android:name=".DisplayBillActivity"></activity>
        <activity android:name=".DisplayLegislatorActivity"></activity>
        <activity android:name=".AboutMeActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
